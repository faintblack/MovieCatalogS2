<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/horizontal_margin"
    android:paddingEnd="@dimen/horizontal_margin"
    android:paddingBottom="@dimen/vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        tools:text="Pengabdi Allah"
        android:textSize="17sp"
        android:id="@+id/text_title_all_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_all_movies"
            android:src="@android:color/darker_gray"
            android:layout_width="100dp"
            android:layout_height="130dp"/>
        <LinearLayout
            android:layout_marginStart="@dimen/horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_marginBottom="5dp"
                tools:text="Film ini menceritakan tentang..."
                android:id="@+id/text_description_all_movies"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#000"
                android:layout_marginStart="@dimen/horizontal_margin"
                tools:text="16 Agustus 2018"
                android:id="@+id/text_release_all_movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>